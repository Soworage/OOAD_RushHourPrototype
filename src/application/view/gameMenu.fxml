<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/22"
            fx:controller="application.controller.GameController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Moves:">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
        <Label fx:id="moveCountLabel" layoutX="88.0" layoutY="14.0" text="0">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
        <Label layoutX="14.0" layoutY="45.0" text="Time:">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
        <Label fx:id="timeCountLabel" layoutX="88.0" layoutY="45.0" text="00:00">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
        <Button fx:id="mainMenuButton" layoutX="671.0" layoutY="18.0" mnemonicParsing="false"
                onAction="#backToMenuButton" prefHeight="55.0" prefWidth="93.0" text="Main Menu"/>
        <StackPane layoutX="89.0" layoutY="97.0" prefHeight="600.0" prefWidth="600.0">
            <children>
                <GridPane fx:id="carGrid" onDragExited="#onDragExited">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
